<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url shortner</title>
    <style>
        body {
            
            font-family: Times, serif;
            font-size: larger;
        }
    </style>
</head>

<body>
    <H1>Url Shortner</H1>
    <% if (locals.shortUrl) { %>
        <p>URL Generated :http://localhost:3001/url/<%= shortUrl %>
        </p>
        <% } %>
            <div>
                <form method="POST" action="/url">
                    <label>Url to short</label>
                    <input type="text" name="url" id="" placeholder="https://example.com">
                    <button type="submit">Generate</button>
                </form>
            </div>
            <div>
                <% if (locals.allUrls) { %>
                    <table>
                        <thead>
                            <th>S.no</th>
                            <th>OriginalUrl</th>
                            <th>ShortId</th>
                            <th>Clicks</th>
                        </thead>
                        <tbody>
                            <% allUrls.forEach((url,index) => { %>
                             <tr>
                                <td><%= index+1 %></td>
                                <td><%= url.redirectUrl %></td>
                                <td><%= url.shortId %></td>
                                <td><%= url.vistitedHistory.length %></td>
                                
                            </tr>
                            <% }) %>
                            
                        </tbody>
                    </table>
                    <% } %>

            </div>
</body>

</html>